<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-lg-6">
      <div class="d-flex flex-column mt-4">
        <form action='/edit/{{id}}?_method=PUT' method='POST'>

          <div class=' mb-3'>
            <label for='edit_name' class='form-label'>名稱*</label>
            <input type='name' name='name' class='form-control wider-input' id='edit_name' autocomplete='off'
              value="{{name}}" />
          </div>

          <div class=' mb-3'>
            <label for='edit_date' class='form-label'>日期*</label>
            <input type='date' name='date' class='form-control' id='edit_date' value='{{date}}' required />
          </div>

          <div class=' mb-3'>
            <label for='edit_category' class='form-label'>類別*</label>
            <select class='form-select' name='categoryName' id='edit_category' required>
              <option value="" selected disabled>類別</option>
              <option value="家居物業">家居物業</option>
              <option value="交通出行">交通出行</option>
              <option value="休閒娛樂">休閒娛樂</option>
              <option value="餐飲食品">餐飲食品</option>
              <option value="其他">其他</option>
            </select>
          </div>

          <div class=' mb-3'>
            <label for='edit_amount' class='form-label'>金額*</label>
            <input type='number' name='amount' class='form-control wider-input' id='edit_amount' value='{{amount}}'
              required />
          </div>

          <button type="submit">新增支出</button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>

<script>
  const selectCategory = document.getElementById("edit_category");
  selectCategory.value = '{{category}}';
</script>